{
  "name": "ideago",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "predev": "pnpm run typegen",
    "prebuild": "pnpm run typegen",
    "typegen": "sanity schema extract --path=./sanity/extract.json &&sanity typegen generate"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ]
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "scrollmirror",
      "sharp",
      "yarn"
    ]
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "@sanity/client": "^6.28.3",
    "@sanity/image-url": "^1.1.0",
    "@sanity/vision": "^3.79.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.1",
    "easymde": "^2.20.0",
    "lucide-react": "^0.479.0",
    "markdown-it": "^14.1.0",
    "next": "15.3.0-canary.12",
    "next-auth": "5.0.0-beta.25",
    "next-sanity": "9.9.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sanity": "^3.79.0",
    "sanity-plugin-markdown": "^5.1.0",
    "server-only": "^0.0.1",
    "styled-components": "^6.1.15",
    "tailwind-merge": "^3.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.0.13",
    "@tailwindcss/typography": "^0.5.16",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.0.13",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.2"
  }
}
